<Window
    x:Name="errorApodo" x:Class="Snake.ErrorApodo"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Height="176.45" Width="379.234">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.098"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <TextBlock x:Name="advertencia" HorizontalAlignment="Left" Margin="58,24,0,0" TextWrapping="Wrap" Text="Nombre de usuario incorrecto.  El nombre solo puede contener mayúsculas y minúsculas (a-z, A-Z) y números (0-9)." VerticalAlignment="Top" Height="87" Width="273"/>
        <Button x:Name="bttnAceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="160,111,0,0" VerticalAlignment="Top" Width="75" Click="onClick"/>

    </Grid>
</Window>
